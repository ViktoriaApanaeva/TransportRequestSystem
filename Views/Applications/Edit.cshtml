@using TransportRequestSystem.Models
@model TransportRequestSystem.Models.Application
@{
    ViewData["Title"] = $"Редактирование заявки {Model.Number}";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>РЕДАКТИРОВАНИЕ ЗАЯВКИ
                    </h2>
                    <span class="h5 mb-0">№ @Model.Number</span>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="Number" />
                    <input type="hidden" asp-for="CreatedAt" />

                    <!-- Статус заявки -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <label asp-for="Status" class="form-label fw-bold">Статус заявки</label>
                            <select asp-for="Status" class="form-select">
                                @foreach (ApplicationStatus status in Enum.GetValues(typeof(ApplicationStatus)))
                                {
                                    var displayName = status.GetType()
                                    .GetField(status.ToString())
                                    .GetCustomAttributes(typeof(System.ComponentModel.DataAnnotations.DisplayAttribute), false)
                                    .Cast<System.ComponentModel.DataAnnotations.DisplayAttribute>()
                                    .FirstOrDefault()?.Name ?? status.ToString();

                                    <option value="@status">@displayName</option>
                                }
                            </select>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <!-- История изменения статусов -->
                    <div class="mb-4">
                        <h5 class="text-primary mb-3">
                            <i class="bi bi-clock-history me-2"></i>История изменения статусов
                        </h5>
                        @if (Model.StatusHistory != null && Model.StatusHistory.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Дата</th>
                                            <th>Старый статус</th>
                                            <th>Новый статус</th>
                                            <th>Изменил</th>
                                            <th>Комментарий</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var history in Model.StatusHistory.OrderByDescending(h => h.ChangedDate))
                                        {
                                            <tr>
                                                <td>@history.ChangedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                                <td>@history.OldStatus</td>
                                                <td>@history.NewStatus</td>
                                                <td>@history.ChangedBy</td>
                                                <td>@history.Comment</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>История изменений статусов отсутствует.
                            </div>
                        }
                    </div>

                    <!-- Раздел заказчика -->
                    <h4 class="mb-3 text-primary">
                        <i class="bi bi-person-badge me-2"></i>Раздел заказчика
                    </h4>

                    <div class="row g-3 mb-4">
                        <div class="col-md-3">
                            <label asp-for="ApplicationDate" class="form-label fw-bold">Дата</label>
                            <input asp-for="ApplicationDate" type="date" class="form-control" required />
                            <span asp-validation-for="ApplicationDate" class="text-danger"></span>
                        </div>

                        <div class="col-md-3">
                            <label asp-for="Time" class="form-label fw-bold">Время</label>
                            <input asp-for="Time" type="time" class="form-control" />
                        </div>

                        <div class="col-md-3">
                            <label asp-for="TripStart" class="form-label fw-bold">Начало поездки</label>
                            <input asp-for="TripStart" type="datetime-local" class="form-control" />
                        </div>

                        <div class="col-md-3">
                            <label asp-for="TripEnd" class="form-label fw-bold">Окончание поездки</label>
                            <input asp-for="TripEnd" type="datetime-local" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="OrganizationUnit" class="form-label fw-bold">Орг ед.</label>
                            <input asp-for="OrganizationUnit" class="form-control" placeholder="Введите организационную единицу" required />
                            <span asp-validation-for="OrganizationUnit" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <div class="row g-2">
                                <div class="col-md-8">
                                    <label asp-for="ResponsiblePerson" class="form-label fw-bold">ФИО ответственного за поездку</label>
                                    <input asp-for="ResponsiblePerson" class="form-control" placeholder="ФИО ответственного" required />
                                    <span asp-validation-for="ResponsiblePerson" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="Phone" class="form-label fw-bold">Телефон</label>
                                    <input asp-for="Phone" class="form-control" placeholder="+7(XXX)XXX-XX-XX" required />
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-8">
                            <label asp-for="Purpose" class="form-label fw-bold">Цель поездки</label>
                            <input asp-for="Purpose" class="form-control" placeholder="Цель поездки" required />
                            <span asp-validation-for="Purpose" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="PassengerCount" class="form-label fw-bold">Кол-во пасс.</label>
                            <input asp-for="PassengerCount" type="number" min="1" max="50" class="form-control" required />
                            <span asp-validation-for="PassengerCount" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Route" class="form-label fw-bold">Маршрут</label>
                            <textarea asp-for="Route" class="form-control" rows="2" placeholder="Укажите маршрут поездки" required></textarea>
                            <span asp-validation-for="Route" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Notes" class="form-label fw-bold">Примечание</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Дополнительная информация"></textarea>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <!-- Раздел диспетчера -->
                    <h4 class="mb-3 text-primary">
                        <i class="bi bi-gear me-2"></i>Раздел диспетчера
                    </h4>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="row g-2">
                                <div class="col-md-8">
                                    <label asp-for="DispatcherName" class="form-label fw-bold">ФИО диспетчера</label>
                                    <input asp-for="DispatcherName" class="form-control" placeholder="ФИО диспетчера" />
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="DispatcherPhone" class="form-label fw-bold">Телефон</label>
                                    <input asp-for="DispatcherPhone" class="form-control" placeholder="Телефон диспетчера" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="row g-2">
                                <div class="col-md-8">
                                    <label asp-for="DriverName" class="form-label fw-bold">ФИО водителя ТС</label>
                                    <input asp-for="DriverName" class="form-control" placeholder="ФИО водителя" />
                                </div>
                                <div class="col-md-4">
                                    <label asp-for="DriverPhone" class="form-label fw-bold">Телефон</label>
                                    <input asp-for="DriverPhone" class="form-control" placeholder="Телефон водителя" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="VehicleBrand" class="form-label fw-bold">Марка ТС</label>
                            <input asp-for="VehicleBrand" class="form-control" placeholder="Марка автомобиля" />
                        </div>

                        <div class="col-md-4">
                            <label asp-for="VehicleNumber" class="form-label fw-bold">Гос. номер</label>
                            <input asp-for="VehicleNumber" class="form-control" placeholder="A000AA" />
                        </div>

                        <div class="col-md-4">
                            <label asp-for="VehicleColor" class="form-label fw-bold">Цвет ТС</label>
                            <input asp-for="VehicleColor" class="form-control" placeholder="Цвет автомобиля" />
                        </div>

                        <div class="col-md-12">
                            <label asp-for="DispatcherNotes" class="form-label fw-bold">Примечание диспетчера</label>
                            <textarea asp-for="DispatcherNotes" class="form-control" rows="3" placeholder="Комментарии диспетчера"></textarea>
                        </div>
                    </div>

                    <!-- Кнопки действий -->
                    <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                        <div>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Назад к списку
                            </a>
                        </div>
                        <div class="btn-group">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save me-1"></i>Сохранить
                            </button>
                            @if (Model.Status != ApplicationStatus.Approved)
                            {
                                <button type="submit" name="action" value="approve" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i>Утвердить
                                </button>
                            }
                            @if (Model.Status != ApplicationStatus.AssignedToVehicle)
                            {
                                <button type="submit" name="action" value="assign" class="btn btn-info">
                                    <i class="bi bi-truck me-1"></i>Назначить ТС
                                </button>
                            }
                            @if (Model.Status != ApplicationStatus.Completed)
                            {
                                <button type="submit" name="action" value="complete" class="btn btn-success">
                                    <i class="bi bi-check-square me-1"></i>Исполнена
                                </button>
                            }
                            @if (Model.Status != ApplicationStatus.RejectedByDirector)
                            {
                                <button type="button" onclick="rejectApplication(@Model.Id)" class="btn btn-danger">
                                    <i class="bi bi-x-circle me-1"></i>Отклонить
                                </button>
                            }
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function rejectApplication(id) {
            Swal.fire({
                title: 'Причина отклонения',
                input: 'text',
                inputLabel: 'Укажите причину отклонения заявки',
                showCancelButton: true,
                confirmButtonText: 'Отклонить',
                cancelButtonText: 'Отмена',
                preConfirm: (reason) => {
                    if (!reason) {
                        Swal.showValidationMessage('Пожалуйста, укажите причину');
                    }
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Reject", "Applications")/' + id + '?reason=' + encodeURIComponent(result.value);
                }
            });
        }
    </script>
}