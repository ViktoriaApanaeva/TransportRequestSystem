@model List<TransportRequestSystem.Models.Application>
@using TransportRequestSystem.Models

@{
    ViewData["Title"] = "Управление заявками";
    var filter = ViewBag.Filter as ApplicationFilter ?? new ApplicationFilter();

}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/applications.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <!-- Навбар -->
    <nav class="navbar-custom">
        <div class="container d-flex justify-content-center">
                <a href="#" class="nav-btn">
                    Управление заявками
                </a>
                <a href="/daily" class="nav-btn">
                    Ежедневная сводка
                </a>
                <a href="/create" class="nav-btn">
                    Подать заявку
                </a>
                <a href="#" class="nav-btn">
                    Перечень заявок
                </a> 
        </div>
    </nav>

    <!-- Основной контент -->
    <div class="container mt-4">
        <!-- Заголовок и кнопки -->
        <div class="main-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Управление заявками</h1>
                <div class="d-flex gap-2">
                    <!-- Поиск -->
                    <div class="input-group" style="width: 300px; height: 40px;">
                        <input type="text" class="form-control" placeholder="Поиск..." id="searchInput">
                        <button class="btn searchButton" type="button" id="searchButton">
                            Поиск
                        </button>
                    </div>

                    <!-- Кнопка создания -->
                    <button type="button" class="btn btn-base"
                            data-bs-toggle="modal"
                            data-bs-target="#createModal">
                        Создать заявку
                    </button>
                </div>
            </div>

            <!-- Фильтры -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" asp-action="Index">
                        <div class="row">
                            <!-- Дата -->
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Дата</label>
                                <div class="mb-3">
                                    <input type="date" name="DateFrom" class="form-control mb-3"
                                           value="@(filter.DateFrom?.ToString("yyyy-MM-dd"))">
                                    <input type="date" name="DateTo" class="form-control"
                                           value="@(filter.DateTo?.ToString("yyyy-MM-dd"))">
                                </div>
                            </div>

                            <!-- Организация -->
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Организация</label>
                                <input type="text" name="OrganizationUnit" class="form-control"
                                       value="@filter.OrganizationUnit">
                            </div>

                            <!-- Кнопки -->
                            <div class="col-md-6 mb-3 d-flex align-items-end gap-2">
                                <button type="submit" class="btn btn-base">Обновить</button>
                                <button type="submit"
                                        name="reset"
                                        value="true"
                                        class="btn btn-base"
                                        style="background-color:grey;">
                                    Сбросить
                                </button>
                            </div>
                        </div>

                        <!-- Чекбоксы статусов -->
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="d-flex align-items-baseline mb-2">
                                    <label class="form-label fw-bold" style="width:fit-content;">Статус</label>
                                    <button type="submit"
                                            name="selectAll"
                                            value="true"
                                            class="btn btn-base ms-4"
                                            style="width:70px !important; height: 30px !important;">
                                        Все
                                    </button>
                                </div>
                                
                                <div class="row">
                                    @{
                                        var allStatuses = Enum.GetValues<ApplicationStatus>();
                                        var groups = allStatuses.Chunk(3).ToList();
                                    }

                                    @foreach (var group in groups)
                                    {
                                        <div class="col-md-4">
                                            @foreach (var status in group)
                                            {
                                                var displayName = GetDisplayName(status);
                                                var isChecked = filter.SelectedStatuses?.Contains(status) ?? true;

                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox"
                                                           name="SelectedStatuses" value="@status"
                                                           id="status_@status" @(isChecked ? "checked" : "")>
                                                    <label class="form-check-label" for="status_@status">
                                                        @displayName
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- Таблица -->
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Дата</th>
                            <th>Организация</th>
                            <th>Ответственный</th>
                            <th>Статус</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var app in Model)
                        {
                            var statusName = GetDisplayName(app.Status);

                            <tr>
                                <td>@app.Number</td>
                                <td>@app.ApplicationDate.ToString("dd.MM.yyyy")</td>
                                <td>@app.OrganizationUnit</td>
                                <td>@app.ResponsiblePerson</td>
                                <td>
                                    <span class="badge
                                                @(app.Status == ApplicationStatus.Approved || app.Status == ApplicationStatus.Completed ? "bg-success" :
                                                                                    app.Status == ApplicationStatus.InProgress ? "bg-primary" :
                                                                                    app.Status.ToString().Contains("Отклонена") ? "bg-danger" :
                                                                                    "bg-secondary")">
                                @statusName
                            </span>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@app.Id" class="btn btn-sm btn-outline-primary">
                                Редактировать
                            </a>
                        </td>
                    </tr>
                                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                Заявок не найдено. <a asp-action="Create">Создайте первую</a>.
            </div>
        }
    </div>
    
    @{
        await Html.RenderPartialAsync("_CreateModal", new Application
        {
            Number = Application.GenerateNumber(),
            ApplicationDate = DateTime.Today,
            Status = ApplicationStatus.CreatedOrModified
        });
    }

    <script>
        // Поиск по таблице
        document.getElementById('searchButton').onclick = function() {
            var search = document.getElementById('searchInput').value.toLowerCase();
            var rows = document.querySelectorAll('tbody tr');

            rows.forEach(function(row) {
                var text = row.textContent.toLowerCase();
                row.style.display = text.includes(search) ? '' : 'none';
            });
        };

        // Обработка нажатия Enter в поле поиска
        document.getElementById('searchInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                document.getElementById('searchButton').click();
            }
        });

        // Обработка отправки формы модального окна
        document.addEventListener('DOMContentLoaded', function() {
            var createForm = document.querySelector('#createModal form');
            if (createForm) {
                createForm.addEventListener('submit', function() {
                    // Закрываем модальное окно после отправки
                    var modal = bootstrap.Modal.getInstance(document.getElementById('createModal'));
                    if (modal) {
                        modal.hide();
                    }
                });
            }
        });
    </script>
</body>
</html>


@functions {
    public string GetDisplayName(ApplicationStatus status)
    {
        var member = status.GetType().GetMember(status.ToString())[0];
        var displayAttr = member.GetCustomAttributes(typeof(System.ComponentModel.DataAnnotations.DisplayAttribute), false)
            .FirstOrDefault() as System.ComponentModel.DataAnnotations.DisplayAttribute;

        return displayAttr?.Name ?? status.ToString();
    }

    public string GetStatusBadgeClass(ApplicationStatus status)
    {
        return status switch
        {
            ApplicationStatus.Approved => "bg-success",
            ApplicationStatus.Completed => "bg-success",
            ApplicationStatus.InProgress => "bg-primary",
            // ApplicationStatus.Rejected => "bg-danger",
            ApplicationStatus.RejectedByDispatcher => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
