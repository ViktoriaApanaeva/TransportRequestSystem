@model List<TransportRequestSystem.Models.Application>
@using TransportRequestSystem.Models

@{
    ViewData["Title"] = "Управление заявками";
    var filter = ViewBag.Filter as ApplicationFilter;
}

<div class="row mb-4">
    <div class="col">
        <h1 class="display-6">
            <i class="bi bi-truck me-2"></i>Управление заявками
        </h1>
    </div>
    <div class="col-auto">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Создать заявку
        </a>
    </div>
</div>

<!-- Фильтры -->
<div class="filter-section mb-4">
    <form method="get" asp-action="Index" class="row g-3">
        <div class="col-md-12">
            <h5 class="mb-3"><i class="bi bi-filter me-2"></i>Фильтры</h5>
        </div>

        <div class="col-md-3">
            <label class="form-label">Дата с</label>
            <input type="date" class="form-control" name="DateFrom" value="@(filter?.DateFrom?.ToString("yyyy-MM-dd"))" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Дата по</label>
            <input type="date" class="form-control" name="DateTo" value="@(filter?.DateTo?.ToString("yyyy-MM-dd"))" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Орг. единица</label>
            <input type="text" class="form-control" name="OrganizationUnit" value="@filter?.OrganizationUnit"
                   placeholder="Введите организационную единицу" />
        </div>

        <div class="col-md-3">
            <label class="form-label">Статусы</label>
            <select class="form-select select2-multiple" name="SelectedStatuses" multiple>
                @foreach (ApplicationStatus status in Enum.GetValues(typeof(ApplicationStatus)))
                {
                    var displayName = status.GetType()
                    .GetField(status.ToString())
                    .GetCustomAttributes(typeof(System.ComponentModel.DataAnnotations.DisplayAttribute), false)
                    .Cast<System.ComponentModel.DataAnnotations.DisplayAttribute>()
                    .FirstOrDefault()?.Name ?? status.ToString();

                    <option value="@status" selected="@(filter?.SelectedStatuses?.Contains(status) ?? false)">
                        @displayName
                    </option>
                }
            </select>
        </div>

        <div class="col-md-12">
            <hr class="my-3" />
            <div class="d-flex justify-content-between">
                <div>
                    <button type="submit" class="btn btn-outline-primary me-2">
                        <i class="bi bi-search me-1"></i>Поиск
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Сбросить
                    </a>
                </div>
                <span class="text-muted">
                    Найдено: @Model.Count заявок
                </span>
            </div>
        </div>
    </form>
</div>

<!-- Список заявок -->
@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>№</th>
                    <th>Дата</th>
                    <th>Орг. единица</th>
                    <th>Ответственный</th>
                    <th>Маршрут</th>
                    <th>Статус</th>
                    <th>Пассажиры</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var application in Model)
                {
                    <tr>
                        <td>@application.Number</td>
                        <td>@application.ApplicationDate.ToString("dd.MM.yyyy")</td>
                        <td>@application.OrganizationUnit</td>
                        <td>@application.ResponsiblePerson</td>
                        <td title="@application.Route">
                            @(application.Route.Length > 50 ? application.Route.Substring(0, 50) + "..." : application.Route)
                        </td>
                        <td>
                            @{
                                var statusClass = application.Status switch
                                {
                                    ApplicationStatus.Deleted => "status-deleted",
                                    ApplicationStatus.RejectedByDirector => "status-rejected",
                                    ApplicationStatus.RejectedByDispatcher => "status-rejected",
                                    ApplicationStatus.AssignedToVehicle => "status-assigned",
                                    ApplicationStatus.CreatedOrModified => "status-created",
                                    ApplicationStatus.NotCompleted => "status-not-compieted",
                                    ApplicationStatus.NotApproved => "status-not-approved",
                                    ApplicationStatus.InProgress => "status-inprogress",
                                    ApplicationStatus.Completed => "status-completed",
                                    _ => "status-created"
                                };

                                var displayName = application.Status.GetType()
                                .GetField(application.Status.ToString())
                                .GetCustomAttributes(typeof(System.ComponentModel.DataAnnotations.DisplayAttribute), false)
                                .Cast<System.ComponentModel.DataAnnotations.DisplayAttribute>()
                                .FirstOrDefault()?.Name ?? application.Status.ToString();
                            }
                            <span class="status-badge @statusClass">@displayName</span>
                        </td>
                        <td>
                            <span class="badge bg-info">
                                <i class="bi bi-person me-1"></i>@application.PassengerCount
                            </span>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a asp-action="Edit" asp-route-id="@application.Id"
                                   class="btn btn-outline-primary" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                @if (application.Status != ApplicationStatus.Deleted)
                                {
                                    <form id="deleteForm-@application.Id" asp-action="Delete"
                                          method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@application.Id" />
                                        <button type="button" onclick="confirmDelete(@application.Id)"
                                                class="btn btn-outline-danger" title="Удалить">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle me-2"></i>Заявки не найдены.
        <a asp-action="Create" class="alert-link">Создайте первую заявку</a>.
    </div>
}