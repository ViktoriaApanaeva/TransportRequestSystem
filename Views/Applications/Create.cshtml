@using TransportRequestSystem.Models
@using TransportRequestSystem.Pages.Applications
@model TransportRequestSystem.Pages.Applications.CreateModel
@{
    ViewData["Title"] = "Создание заявки";
}

<div class="container-fluid">
    <h1 class="mb-4">СОЗДАНИЕ ЗАЯВКИ</h1>

    <form asp-action="Create" method="post"
          @Html.AntiForgeryToken()>
        <!-- Статус -->
        <div class="mb-4">
            <h5 class="mb-3">Статус заявки</h5>
            @* <select asp-for="Status" class="form-control" disabled>
                <option value="@CreateModel.Status">@CreateModel.Status</option>
            </select> *@
        </div>

        <!-- Заказчик -->
        <div class="mb-4">
            <h5 class="mb-3">Раздел заказчика</h5>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Дата</label>
                    <input asp-for="ApplicationDate" type="date" class="form-control" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Начало поездки</label>
                    <input asp-for="TripStart" type="datetime-local" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Время</label>
                    <input asp-for="Time" type="time" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Окончание поездки</label>
                    <input asp-for="TripEnd" type="datetime-local" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Организация</label>
                    <input asp-for="OrganizationUnit" class="form-control" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">ФИО ответственного</label>
                    <input asp-for="ResponsiblePerson" class="form-control" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Телефон</label>
                    <input asp-for="Phone" class="form-control" required>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Цель поездки</label>
                    <input asp-for="Purpose" class="form-control" required>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label fw-bold">Маршрут</label>
                    <textarea asp-for="Route" class="form-control" rows="3" required></textarea>
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label fw-bold">Примечание</label>
                    <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                </div>
            </div>
        </div>

        <!-- Диспетчер -->
        <div class="mb-4">
            <h5 class="mb-3">Раздел диспетчера</h5>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">ФИО диспетчера</label>
                    <input asp-for="DispatcherName" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Телефон</label>
                    <input asp-for="DispatcherPhone" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">ФИО водителя</label>
                    <input asp-for="DriverName" class="form-control">
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Телефон</label>
                    <input asp-for="DriverPhone" class="form-control">
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label fw-bold">Марка ТС</label>
                    <input asp-for="VehicleBrand" class="form-control">
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label fw-bold">Гос. номер</label>
                    <input asp-for="VehicleNumber" class="form-control">
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label fw-bold">Цвет ТС</label>
                    <input asp-for="VehicleColor" class="form-control">
                </div>
                <div class="col-md-12 mb-3">
                    <label class="form-label fw-bold">Примечание диспетчера</label>
                    <textarea asp-for="DispatcherNotes" class="form-control" rows="3"></textarea>
                </div>
            </div>
        </div>

        <!-- Кнопки -->
        <div class="d-flex justify-content-between">
            <div>
                <button type="submit" class="btn btn-primary me-2">Сохранить</button>
                <button type="submit" name="action" value="approve" class="btn btn-success me-2">Утвердить</button>
                <button type="submit" name="action" value="assign" class="btn btn-info me-2">Назначить ТС</button>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-secondary me-2">Отмена</a>
                <button type="submit" name="action" value="reject" class="btn btn-danger">Отклонить</button>
            </div>
        </div>
    </form>
</div>

<style>
    h1, h5 {
        color: #333;
        font-weight: 600;
    }

    .form-label {
        font-weight: 500;
        margin-bottom: 5px;
    }

    .btn {
        padding: 8px 16px;
        font-weight: 500;
    }
</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    // Автозаполнение даты
    document.addEventListener('DOMContentLoaded', function() {
        if (!document.getElementById('ApplicationDate').value) {
            document.getElementById('ApplicationDate').valueAsDate = new Date();
        }
    });
</script>